<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray_100" >

    <TextView
        android:id="@+id/tvNaviTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_L"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/tab_icon_pressed2"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="@dimen/fontsize_Text_ML" />

    <ListView
        android:id="@+id/lvNavigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvNaviTitle"
        android:listSelector="@drawable/listview_selector" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:src="@drawable/back" />

</RelativeLayout>